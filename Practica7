class Cuenta:
    def __init__(self, titular="", cantidad=5000) -> None:
        self.__titular = titular
        self.__cantidad = cantidad
    
    @property
    def titular(self):
        return self.__titular
    
    @property
    def cantidad(self):
        return self.__cantidad

    @titular.setter
    def titular(self, titular):
        self.__titular = titular
    
    @cantidad.setter
    def cantidad(self, cantidad):
        self.__cantidad = cantidad
    
    # def total_cantidad(self):
    #     total = 0
    #     return total

    def ingresar(self):
        nuevo_monto = 0
        if nuevo_monto < 0:
            print(f"Su cuenta sigue siendo: {self.__cantidad}")
        else:
            nuevo_monto = float(input('CuantÃ³ ingresarÃ¡?: \n'))
        return self.__cantidad + nuevo_monto

    def retirar(self):
        ahorrado = input(float("CuÃ¡nto deseas retirar: "))
        return self.__cantidad - ahorrado

    def mostrar(self):
        return "Titular:" (self.__titular) + "- cantidad: " (str(self.__cantidad))
